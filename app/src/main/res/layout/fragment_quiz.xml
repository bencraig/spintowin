<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".QuizActivityFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-5dp">

        <ImageView
                android:id="@+id/bb_card1"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/card_back"
            android:layout_toLeftOf="@+id/bb_card2"
            android:layout_toStartOf="@+id/bb_card2" />
            <ImageView
                android:id="@+id/bb_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/card_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/sb_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/card_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/sb_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/card_back"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/sb_card1"
                android:layout_toEndOf="@+id/sb_card1" />

        <ImageView
            android:id="@+id/btn_card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/blind_info"
            android:layout_alignStart="@+id/blind_info" />

        <ImageView
            android:id="@+id/btn_card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_back"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btn_card1"
            android:layout_toEndOf="@+id/btn_card1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Blinds: 100/200"
            android:id="@+id/blind_info"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Stack: 2000"
            android:id="@+id/btn_stack"
            android:layout_above="@+id/btn_percentage"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Call %"
            android:id="@+id/btn_percentage"
            android:layout_above="@+id/btn_card1"
            android:layout_alignLeft="@+id/btn_stack"
            android:layout_alignStart="@+id/btn_stack" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUSH"
            android:id="@+id/push_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOLD"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Stack: 2000"
            android:id="@+id/sb_stack"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Call %"
            android:id="@+id/sb_percentage"
            android:layout_below="@+id/sb_stack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Stack: 2000"
            android:id="@+id/bb_stack"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Call %"
            android:id="@+id/bb_percentage"
            android:layout_below="@+id/bb_stack"
            android:layout_alignParentRight="true"
           />
        </RelativeLayout>
</RelativeLayout>